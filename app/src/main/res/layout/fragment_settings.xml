<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsFragment">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/cardview_dark_background">

        <RelativeLayout
            android:id="@+id/settings_profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal">

            <!--
        <ImageView
                android:id="@+id/settings_profile_imageview"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:background="@drawable/search_view_shape"
                android:src="@drawable/ic_person_black_24dp" />

        <ImageView
            android:id="@+id/settings_profile_imageview2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/circle_crop"/>

        -->
            <TextView
                android:id="@+id/settings_profile_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="20dp"
                android:text="Profile"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/settings_profile_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:text=">"
                android:textSize="30dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/settings_access_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="Make your account "
                android:textSize="20dp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_access_textview"
                android:layout_marginLeft="20dp">
            <RadioButton
                android:id="@+id/publicradioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_access_textview"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:text="Public" />

            <RadioButton
                android:id="@+id/privateradioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/publicradioButton"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:text="Private" />
            </RadioGroup>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>