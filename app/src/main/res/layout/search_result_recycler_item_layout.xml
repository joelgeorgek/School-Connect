<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:id="@+id/recycler_item_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <!--
        <ImageView
            android:id="@+id/recycler_item_imageview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_person_black_24dp"/>
            -->

        <ImageView
            android:id="@+id/recycler_item_imageview"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:src="@drawable/ic_person_black_300dp" />

        <ImageView
            android:id="@+id/settings_profile_imageview2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:background="#000000"
            android:alpha="0.1"
            android:layout_margin="10dp"
            android:src="@drawable/circle_crop" />
        <ImageView
            android:id="@+id/settings_profile_imageview3"
            android:layout_width="60dp"
            android:layout_centerVertical="true"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:src="@drawable/circle_crop" />

        <TextView
            android:id="@+id/recycler_item_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/recycler_item_imageview"
            android:text="Test Text"
            android:textSize="20dp" />

        <Button
            android:id="@+id/my_followbutton"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_gravity=""
            android:layout_margin="10dp"
            android:background="#ffffff"
            android:text="follow"
            android:textColor="#D50000 " />

    </RelativeLayout>

</android.support.v7.widget.CardView>